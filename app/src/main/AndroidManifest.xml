<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.integraresoftware.android.odemsaprotocols">

    <application
        android:allowBackup="true"
        android:icon="@drawable/odemsa_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity
            android:name="com.integraresoftware.android.odemsaprotocols.MainActivity"
            android:label="@string/protocol_region" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.integraresoftware.android.odemsaprotocols.ListDrugsActivity"
            android:label="@string/title_activity_list_drugs" >
        </activity>

        <activity
            android:name="com.integraresoftware.android.odemsaprotocols.ActivityDisplayList"
            android:label="@string/title_activity_select_prot_cat"
            android:parentActivityName="com.integraresoftware.android.odemsaprotocols.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.integraresoftware.android.odemsaprotocols.MainActivity" />
        </activity>

        <activity
            android:name="com.integraresoftware.android.odemsaprotocols.ActivityDisplaySection"
            android:label="@string/title_activity_select_prot_cat"
            android:parentActivityName = "com.integraresoftware.android.odemsaprotocols.ActivityDisplayList" >
            <meta-data
                android:name = "android.support.PARENT_ACTIVITY"
                android:value = "com.integraresoftware.android.odemsaprotocols.DisplayListActivity" />
        </activity>

        <activity
            android:name="com.integraresoftware.android.odemsaprotocols.ActivityDisplaySubsection"
            android:parentActivityName="com.integraresoftware.android.odemsaprotocols.ActivityDisplaySection" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.integraresoftware.android.odemsaprotocols.DisplayProtocolSectionActivity" />
        </activity>

        <activity android:name="com.integraresoftware.android.odemsaprotocols.ActivityDisplayManagement"
            android:parentActivityName="com.integraresoftware.android.odemsaprotocols.ActivityDisplaySection" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.integraresoftware.android.odemsaprotocols.DisplayProtocolSectionActivity" />
        </activity>

        <activity android:name="com.integraresoftware.android.odemsaprotocols.ActivityZoomImage">
        </activity>

        <activity android:name="com.integraresoftware.android.odemsaprotocols.calculators.ActivityCalculatorList">
        </activity>

        <activity android:name="com.integraresoftware.android.odemsaprotocols.calculators.ActivityDopamineCalculator">
        </activity>

        <provider
            android:authorities="com.integraresoftware.emsbuddy.data.DbProvider"
            android:name="com.integraresoftware.android.odemsaprotocols.data.DbProvider"
            android:exported="false" >
        </provider>
    </application>

</manifest>
